<%- include('./partials/header') %>

<div
  class="flex flex-col items-center justify-center bg-[#F9F5E7]"
  style="
    background-image: url('/images/Background.jpeg');
    background-size: 40;
    background-repeat: repeat;
    background-position: center;
    height: 45rem;
    opacity: 1;
  "
>
  <div class="w-full text-center m-20">
    <h1 class="text-[4vw] text-[#3F2305]">
      Welcome to <span class="text-[#6F4E37]">Scatch</span>
    </h1>
  </div>

  <div class="w-full flex justify-around">
    <div class="w-1/3 m-20">
      <h2 class="text-4xl text-[#3F2305] italic ml-3">Create Account</h2>
      <form action="/users/register" method="POST">
        <input
          name="username"
          placeholder="Username"
          class="border-2 border-solid border-[#3F2305] rounded-lg w-full m-3 text-2xl mt-6"
          type="text"
          required
        />
        <br />
        <input
          name="email"
          placeholder="Email"
          class="border-2 border-solid border-[#3F2305] rounded-lg w-full m-3 text-2xl"
          type="email"
          required
        />
        <br />
        <input
          name="password"
          placeholder="Password"
          class="border-2 border-solid border-[#3F2305] rounded-lg w-full m-3 text-2xl"
          type="password"
          required
        />
        <input
          value="Create Account"
          type="submit"
          class="text-2xl mx-2 px-6 py-1 border-2 border-solid border-[#3F2305] rounded-full bg-[#3F2305] text-zinc-100"
        />
      </form>
    </div>

    <div class="w-1/3 m-20">
      <h1 class="text-[3vw] text-[#3F2305]">Login Your Account</h1>
      <form action="/users/login" method="POST">
        <input
          name="email"
          placeholder="Email"
          class="border-2 border-solid border-[#3F2305] rounded-lg w-full m-3 text-2xl"
          type="text"
          required
        />
        <br />
        <input
          name="password"
          placeholder="Password"
          class="border-2 border-solid border-[#3F2305] rounded-lg w-full m-3 text-2xl"
          type="password"
          required
        />
        <br />
        <input
          value="Login"
          type="submit"
          class="text-2xl mx-2 py-1 px-6 border-2 border-solid border-[#3F2305] rounded-full bg-[#3F2305] text-zinc-100"
        />
      </form>
    </div>
  </div>

  <div
    class="absolute top-8 right-2 text-2xl mt-8 text-4xl italic bg-[#6F4E37] rounded-xl border-[#6F4E37] border text-white pl-4 pr-3"
  >
    Elevate your Style with Scatch Handbags
  </div>
</div>

<%- include('./partials/footer') %>