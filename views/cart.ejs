<%- include('./partials/header') %>

<div class="w-full px-10 py-10">
  <% itemsBill.forEach(function(billItem){ %>
  <div class="w-full h-auto flex items-start gap-5 mb-10">
    <div class="rounded-md overflow-hidden">
      <div class="w-full h-[14rem]">
        <img
          class="h-full w-full object-contain"
          src="data:image/jpeg;base64,<%= billItem.item.image.toString('base64') %>"
          alt=""
        />
      </div>
      <div
        class="w-[25vw] justify-between flex pl-4 pr-14 py-4 bg-[<%= billItem.item.panelcolor %>]"
      >
        <h3 class="text-2xl"><%= billItem.item.name %></h3>
        <div class="flex items-center gap-2">
          <i
            class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"
          ></i>
          <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
          <i
            class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"
          ></i>
        </div>
      </div>
      <div
        class="flex text-white items-center justify-between px-5 py-3 bg-[<%= billItem.item.textcolor %>]"
      >
        <h4 class="text-lg">Net Total</h4>
        <h2 class="text-lg">₹ <%= billItem.itemBill %></h2>
      </div>
    </div>
    <div class="w-[70%] ml-20 mt-20 flex flex-col justify-between">
      <div>
        <h3 class="text-xl">Price Breakdown</h3>
        <div class="px-10 mt-5">
          <div class="flex mt-2">
            <h4 class="w-1/3">Total MRP</h4>
            <h4>₹ <%= Number(billItem.item.price) %></h4>
          </div>
          <div class="flex mt-2">
            <h4 class="w-1/3">Discount on MRP</h4>
            <h4>₹ <%= billItem.item.discount %></h4>
          </div>
          <div class="flex mt-2">
            <h4 class="w-1/3">Platform Fee</h4>
            <h4>₹ 20</h4>
          </div>
          <div class="flex mt-2">
            <h4 class="w-1/3">Shipping Fee</h4>
            <h4>FREE</h4>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% }) %>
</div>

<div class="flex justify-between px-20 mt-2 mb-40">
  <h3 class="w-1/3 text-4xl">Total Amount</h3>
  <h3 class="font-semibold text-3xl text-[#6F4E37]">₹ <%= totalBill %></h3>
</div>

<%- include('./partials/footer') %>
